            <img src="images/chefs-01.jpg">
            <img src="images/chefs-02.jpg">
            <img src="images/chefs-03.jpg">
        </div>
    </div>

    <script>
        function myFunction()
        {
            console.log(2);
            var x = document.getElementById("navbar");
            if(!x.classList.contains("responsive"))
            {
